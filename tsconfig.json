{
	"compilerOptions": {
		"target": "es6",
		"allowJs": true,
		"outDir": "public",
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"removeComments": true,
		"preserveConstEnums": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": "."
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules"]
}
